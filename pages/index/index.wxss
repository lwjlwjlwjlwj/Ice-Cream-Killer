.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  text-align: center;
}

.upload-price-button,
.product-info {
  margin-bottom: 20px;
}

.product-price {
  font-size: 18px;
  font-weight: bold;
}

.product-name {
  font-size: 16px;
  color: gray;
}

.not-recommended {
  font-size: 18px;
  font-weight: bold;
  color: red;
}

.scan-button {
  margin-bottom: 20px;
}

.scan-result {
  font-size: 16px;
  margin-bottom: 10px;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999; /* 调整 z-index 值 */
}

.modal {
  background-color: white;
  padding: 20px;
  padding-bottom: 20%;
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  width: auto; /* 调整弹窗宽度 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15); /* 添加阴影效果 */
  position: absolute; /* 添加绝对定位 */
  bottom: 0; /* 设置为页面底部 */
  left: 0; /* 水平居左 */
  right: 0; /* 水平居右 */
}

.input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

.price-input {
  width: 88%;
  height: 30px;
  padding: 10px;
  font-size: 14px;
  border: 1px solid gray;
  border-radius: 10px;
  margin-top: 8px;
  margin-bottom: 8px;
}

.button-group {
  display: flex;
  justify-content: flex-end;
  margin-right: auto; 
}

.cancel-button,
.confirm-button {
  padding: 6px 0px; /* 调整按钮的内边距 */
  font-size: 14px; /* 调整按钮的字体大小 */
  min-width: 30%; /* 设置按钮的最小宽度 */
  max-width: 40%; /* 设置按钮的最大宽度 */
  height: auto;
  background-color: #ddd;
  border-radius: 5px;
  text-align: center; /* 添加文本居中对齐 */
  line-height: 30px; /* 设置行高等于按钮高度 */
}

.confirm-button:last-child {
  background-color: #1aad19;
  color: white;
}

.tabletext{
  position: fixed;
  top: 4%;
  left: 0;
  right: 0;
  display: flex;
  font-size: 16px;
  color: gray;
  justify-content: center;
  z-index: 99; /* 调整 z-index 值 */
}

.price-table {
